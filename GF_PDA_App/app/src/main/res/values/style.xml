<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="icon_style">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">#ffffff</item>
        <item name="android:padding">0px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:lineSpacingExtra">-5px</item>
        <item name="android:textSize">16px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:background">#1965a3</item>
    </style>

    <style name="content_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_marginLeft">10px</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_marginBottom">90px</item>
    </style>






</resources>