<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.rartonne.appftur.HomeActivity">

    <!-- Header aligned to top -->

    <include layout="@layout/header" />

    <!-- Footer aligned to bottom -->

    <include layout="@layout/footer" />

    <RelativeLayout
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@id/footer"
    android:layout_below="@id/header" >



    <ImageView
        android:layout_width="110px"
        android:layout_height="110px"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textUsername"
        android:padding="0dp"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:scaleType="fitCenter"
        android:src="@mipmap/cad_coupler_test" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageStatus"
        android:layout_below="@+id/textUsername"
        android:padding="0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="20px"
        android:scaleType="fitCenter"
        android:src="@mipmap/sign_work_in_progress" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/text_user_param"
        android:layout_below="@+id/Btn_user_param"
        android:layout_alignLeft="@+id/Btn_user_param"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#1965a3"
        android:layout_marginLeft="-3px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_wm_settings"
        android:textColor="#1965a3"
        android:layout_below="@+id/Btn_wm_setting"
        android:layout_alignLeft="@+id/Btn_wm_setting"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="753911608"
        android:textSize="25px"
        android:textColor="#1965a3"
        android:id="@+id/textArtId"
        android:layout_alignTop="@+id/imageView2"

        android:layout_marginLeft="190px"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Coupler"
        android:textColor="#1965a3"
        android:id="@+id/textArticle"
        android:layout_below="@+id/textArtId"
        android:layout_alignLeft="@+id/textArtId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textColor="#1965a3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PE100 SDR11"
        android:id="@+id/textStandard"
        android:layout_below="@+id/textArticle"
        android:layout_alignLeft="@+id/textArtId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textColor="#1965a3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d32"
        android:id="@+id/textDiametre"
        android:layout_below="@+id/textStandard"
        android:layout_alignLeft="@+id/textArtId"/>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="200px"
        android:background="#1965a3"/>

    </RelativeLayout>
</RelativeLayout>