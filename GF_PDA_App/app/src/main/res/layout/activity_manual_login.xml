<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.rartonne.appftur.HomeActivity">


    <TextView android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#1965a3"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="100dp"
        android:paddingTop="5px"
        android:id="@+id/textUsername" />

    <TextView android:text="Company name"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="150px"
        android:paddingTop="25px"
        android:id="@+id/textCompany" />

    <TextView android:text="Last Sync Date"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="370px"
        android:paddingTop="5px"
        android:id="@+id/textLastUpdate" />


    <TextView android:text="05/06/2015 12:15"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="350px"
        android:paddingTop="25px"
        android:id="@+id/textDate" />


    <ImageView
        android:layout_width="110px"
        android:layout_height="50px"
        android:id="@+id/imageView"
        android:contentDescription=""
        android:src="@mipmap/logo_gf"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SCAN\nBARCODE"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_scan_barcode"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"
        android:layout_below="@+id/Btn_netmap"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/Btn_confirm"
        android:src="@mipmap/action_confirm"
        android:layout_marginTop="500px"
        android:layout_marginLeft="30px"
        android:background="#ffffff" />




    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/Btn_cancel"
        android:src="@mipmap/action_cancel"
        android:layout_marginTop="500px"
        android:layout_marginLeft="350px"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CANCEL"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_cancel"
        android:layout_below="@+id/Btn_cancel"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/Btn_cancel"
        android:layout_marginLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CONFIRM"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_confirm"
        android:layout_below="@+id/Btn_confirm"
        android:layout_alignLeft="@+id/Btn_confirm"
        android:layout_marginLeft="5px"
        android:textColor="#000000"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:background="#1965a3"
        android:id="@+id/menu_bottom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Login"
        android:ems="10"
        android:id="@+id/input_login"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please type in your Login"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_fusiondata"
        android:layout_below="@+id/input_login"

        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"/>

</RelativeLayout>
