<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.rartonne.appftur.HomeActivity">


    <!-- header aligned to bottom -->

    <include layout="@layout/header" />


    <RelativeLayout
        android:id="@+id/rel_settings"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="80px">

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_param1"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:onClick="toActivity"
        android:tag="MaintenanceActivity"
        android:src="@mipmap/icon_net_mapp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Synchro"
        android:textColor="#1965a3"
        android:id="@+id/text_1_1"
        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:layout_below="@+id/Btn_param1"
        android:layout_alignLeft="@+id/Btn_job_data"
        android:layout_marginLeft="-10px"/>

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_param2"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:onClick="toActivity"
        android:tag="SecIdDataActivity"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_net_mapp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sec ID Data"
        android:textColor="#1965a3"
        android:id="@+id/text_1_2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/Btn_param2"
        android:layout_centerHorizontal="true"
        android:textAlignment="inherit" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_param3"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="30px"
        android:layout_marginLeft="350px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:onClick="toActivity"
        android:src="@mipmap/icon_net_mapp"
        android:tag="ScanlogActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scan Log"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_1_3"
        android:layout_below="@+id/Btn_param3"
        android:layout_alignLeft="@+id/Btn_acc_gps"
        android:textColor="#1965a3"
        android:layout_marginLeft="5dp"/>

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_job_data"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="180px"
        android:layout_marginLeft="30px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:onClick="photo"
        android:src="@mipmap/icon_net_mapp"


        android:background="#fffff9fc"
        android:clickable="false"
        android:visibility="invisible" />




    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/Btn_techdocs"
        android:layout_alignBottom="@+id/Btn_job_data"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_net_mapp"
        android:background="#ffffffff"
        android:onClick="changePicture"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_acc_gps"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_net_mapp"
        android:layout_marginLeft="350px"
        android:layout_alignTop="@+id/Btn_techdocs"
        android:background="#ffffffff"
        android:onClick="change"
        android:visibility="invisible" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/text_user_param"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#1965a3"
        android:layout_marginLeft="-3px"
        android:layout_alignLeft="@+id/Btn_acc_gps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_wm_settings"
        android:textColor="#1965a3"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/Btn_techdocs"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <!-- Footer aligned to bottom -->

    <include layout="@layout/footer" />




</RelativeLayout>
