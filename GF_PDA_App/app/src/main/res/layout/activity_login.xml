<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.rartonne.appftur.HomeActivity">


    <TextView android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#1965a3"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="100dp"
        android:paddingTop="5px"
        android:id="@+id/textUsername" />

    <TextView android:text="Company name"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="150px"
        android:paddingTop="25px"
        android:id="@+id/textCompany" />

    <TextView android:text="Last Sync Date"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="370px"
        android:paddingTop="5px"
        android:id="@+id/textLastUpdate" />


    <TextView android:text="05/06/2015 12:15"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textColor="#ffffff"
        android:textSize="12px"
        android:textStyle="bold"
        android:paddingLeft="350px"
        android:paddingTop="25px"
        android:id="@+id/textDate" />


    <ImageView
        android:layout_width="110px"
        android:layout_height="50px"
        android:id="@+id/imageView"
        android:contentDescription=""
        android:src="@mipmap/logo_gf"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_scan_barcode"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_scan_barcode"
        android:layout_below="@+id/Btn_netmap"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SCAN\nBARCODE"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_scan_barcode"
        android:layout_below="@+id/Btn_scan_barcode"
        android:layout_alignLeft="@+id/Btn_scan_barcode"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"/>

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_manual_entry"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="30px"
        android:src="@mipmap/icon_manual_login"
        android:layout_below="@+id/Btn_netmap"
        android:background="#ffffffff"
        android:layout_centerVertical="true"
        android:onClick="gotoManualLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MANUAL\nENTRY"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_fusiondata"
        android:layout_below="@+id/Btn_manual_entry"
        android:layout_alignLeft="@+id/Btn_manual_entry"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"/>


    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_scan_qr"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="350px"
        android:src="@mipmap/icon_scan_qr"
        android:layout_below="@+id/Btn_netmap"
        android:background="#ffffffff"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SCAN\nQRCODE"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_scan_qr"
        android:layout_below="@+id/Btn_scan_qr"
        android:layout_alignLeft="@+id/Btn_scan_qr"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="10px"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:background="#1965a3"
        android:id="@+id/menu_bottom" />

</RelativeLayout>
