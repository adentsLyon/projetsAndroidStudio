<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.rartonne.appftur.HomeActivity">


    <!-- Header aligned to top -->

    <include layout="@layout/header" />


    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_scan_barcode"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_scan_barcode"
        android:layout_below="@+id/Btn_job_data"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SCAN\nBARCODE"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_scan_barcode"
        android:layout_below="@+id/Btn_scan_barcode"
        android:layout_alignLeft="@+id/Btn_scan_barcode"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"/>

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_manual_entry"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="30px"
        android:src="@mipmap/icon_manual_login"
        android:layout_below="@+id/Btn_job_data"
        android:background="#ffffffff"
        android:layout_centerVertical="true"
        android:onClick="gotoManualLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MANUAL\nENTRY"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_fusiondata"
        android:layout_below="@+id/Btn_manual_entry"
        android:layout_alignLeft="@+id/Btn_manual_entry"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="7px"/>


    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/Btn_pictures"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="350px"
        android:src="@mipmap/icon_scan_qr"
        android:layout_below="@+id/Btn_job_data"
        android:background="#ffffffff"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SCAN\nQRCODE"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/text_scan_qr"
        android:layout_below="@+id/Btn_pictures"
        android:layout_alignLeft="@+id/Btn_pictures"
        android:textColor="#000000"
        android:paddingBottom="15px"
        android:lineSpacingExtra="-8px"
        android:layout_marginLeft="10px"/>

    <!-- footer aligned to bot -->

    <include layout="@layout/footer" />

</RelativeLayout>
