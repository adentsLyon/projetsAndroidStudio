<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="80px"
    android:gravity="center">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textUsername"
        android:padding="0dp"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:scaleType="fitCenter"
        android:src="@drawable/asset_2920" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageStatus"
        android:layout_below="@+id/textUsername"
        android:padding="0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="30px"
        android:scaleType="fitCenter"
        android:src="@mipmap/sign_work_in_progress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25px"
        android:textColor="#1965a3"
        android:id="@+id/textArtId"
        android:layout_alignTop="@+id/imageView2"

        android:layout_marginLeft="190px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1965a3"
        android:id="@+id/textArticle"
        android:layout_below="@+id/textArtId"
        android:layout_alignLeft="@+id/textArtId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textColor="#1965a3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textStandard"
        android:layout_below="@+id/textArticle"
        android:layout_alignLeft="@+id/textArtId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:textColor="#1965a3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textDiametre"
        android:layout_below="@+id/textStandard"
        android:layout_alignLeft="@+id/textArtId"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="160px"
        android:background="#1965a3"/>

</RelativeLayout>